<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_trailer_thumb"
            android:layout_width="@dimen/list_item_trailer_image_width"
            android:layout_height="@dimen/list_item_trailer_image_height"
            android:layout_marginTop="@dimen/list_item_trailer_image_margin_top"/>

        <TextView
            android:id="@+id/tv_trailer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/list_item_trailer_tv_margin_top_bottom"
            android:textSize="@dimen/list_item_trailer_tv_text_size"
            android:layout_marginBottom="@dimen/list_item_trailer_tv_margin_top_bottom"/>

    </LinearLayout>



</android.support.v7.widget.CardView>