<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/list_item_trailer_margin_left"
    android:layout_marginLeft="@dimen/list_item_trailer_margin_left">


    <ImageView
        android:id="@+id/iv_play_image"
        android:src="@drawable/play"
        android:layout_width="@dimen/list_item_trailer_image_width_height"
        android:layout_height="@dimen/list_item_trailer_image_width_height"
        android:layout_marginTop="@dimen/list_item_trailer_image_margin_top"
        android:layout_marginRight="@dimen/list_item_trailer_image_margin_right"/>

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/list_item_trailer_tv_margin_top"
        android:textSize="@dimen/list_item_trailer_tv_text_size"/>


</LinearLayout>